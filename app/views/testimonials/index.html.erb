<!-- preloader -->
<div class="preloading">
  <%= link_to image_tag("fancy-loading.gif", class: "loading-gif"), root_path %>
</div>
<!--################ WRAP START ################-->
<div id="wrap">
<!--################ HEADER START ################-->
  <header class="page-title">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h2>TESTIMONIALS</h2>
        </div>
        <% if user_signed_in? %>
        <div class="col-md-4">
          <%= link_to "New testimonial", new_testimonial_path, :class => 'button' %>
        </div>
        <% end %>
      </div>
    </div>
  </header>
  <% @testimonials.each.with_index do |testimonial,index| %>
      <section class="blog">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <div class="post-image">
                <%= image_tag testimonial.image(:medium) %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="blog-post-title">
                <h3><%= testimonial.name %></h3>
                <% if user_signed_in? %>
                  <%= link_to "Edit testimonial", edit_testimonial_path(testimonial) %>
                  <%= link_to "Destroy", testimonial_path(testimonial), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>
                <% end %>
              </div>
              <div class="single-blog-meta">
              <p></p>
              </div>
              <div class="post-content">
                <p>
                <%= markdown(testimonial.description) %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
</div>
<!--################ PUSH WILL KEEP THE FOOTER AT BOTTOM IF YOU WANT TO CREATE OTHER PAGES ################-->
<div id="push"></div>

<!-- Preloader script -->
<script>
$(window).load(function() {
    "use strict";
    $('.preloading').fadeOut();
});
</script>
