<%= form_for @service do |f| %>
  <% if @service.errors.any? %>
    <h2><%= pluralize(@service.errors.count, "error")%> prevented this service from saving: </h2>
    <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :image, "Image" %> <br>
  <%= f.file_field :image %>

  <br>
  <br>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <br>
  <br>

  <%= f.submit "Submit" %>

  <br>
  <br>
  <br>
<% end %>